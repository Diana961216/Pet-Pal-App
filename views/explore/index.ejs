<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/explore.css" />
    <title>Explore Adoptable Pets</title>
  </head>
  <body>
    <%- include('../partials/_navbar') %>

    <h1 style="margin-top: 1rem; text-align: center">Explore Adoptable Pets</h1>

    <% if (pets && pets.length > 0) { %>
    <ul>
      <% pets.forEach(pet => { %>
      <li>
        <strong><%= pet.name %></strong>
        (<%= pet.breeds.primary %>, <%= pet.age %>, <%= pet.gender %>) <% if
        (pet.photos && pet.photos.length > 0) { %>
        <img src="<%= pet.photos[0].medium %>" alt="<%= pet.name %>" />
        <% } %>
        <div class="card-buttons">
          <a href="/explore/<%= pet.id %>" class="btn small-btn">View</a>
          <a
            href="/explore/<%= pet.id %>/adopt"
            class="btn secondary-btn small-btn"
            >I want to adopt</a
          >
        </div>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p style="text-align: center">No pets found. Try again later!</p>
    <% } %>

    <a
      href="/"
      class="btn"
      style="display: block; width: fit-content; margin: 2rem auto"
      >Back to Home</a
    >
  </body>
</html>
